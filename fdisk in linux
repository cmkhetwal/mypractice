unmount /dev/sdb2

mount /dev/sdb1 /mnt/decrease
mount /dev/sdb2 /mnt/increase

ls -al
df -kh
cd /mnt/decrease
ls -al 
mv i* /mnt/increase
cd /mnt/increase
mv d* /mnt/decrease
cd
ls -al
df -kh
vi /etc/fstab
put comment in /mnt/increase
wq!
